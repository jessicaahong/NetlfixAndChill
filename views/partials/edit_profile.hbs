<div id="edit-profile-div" class="col-md-8 col-md-offset-4">
	<form id="edit-profile-form" class="form" action="/users/{{user._id}}?_method=put" method="POST">
		<input type="hidden" name="userId" value={{user._id}}>
		<label for="firstName" class="form-group">First Name</label>
		<input type="text" id="firstName" name="firstName" class="form-control" value={{user.firstName}}><br>
		<label for="lastName" class="form-group">Last Name</label>
		<input type="text" id="lastName" name="lastName"  class="form-control" value={{user.lastName}}><br>
		<label for="gender" class="form-group">Gender <span><i>(please specify "male", "female", or "other")</i></span></label>
		<input type="text" id="gender" name="gender"  class="form-control" value="{{user.gender}}"><br>
		<label for="birthday" class="form-group">Birthday</label>
		<input type="text" id="birthday" name="birthday"  class="form-control" value="{{user.birthday}}"><br>
		<label for="sexualPref" class="form-group">Interested in</label>
		<input type="text" id="sexualPref" name="sexualPref"  class="form-control" value="{{user.sexualPref}}"><br>
		<label for="location" class="form-group">Location</label>
		<input type="text" id="location" name="location"  class="form-control" value="{{user.location}}"><br>
		<input type="submit" value="Save Changes" class="btn btn-default"></input>
	</form>
	<a href="/users/{{user._id}}" class="btn btn-default">Cancel</a><br>
	<a href="/users/{{user._id}}" id="delete-account-button" class="btn btn-danger">Delete Account</button>
</div>