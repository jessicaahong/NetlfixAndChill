<div id="sidebar" class="col-md-4">
	<div id="sidebar-text">
		<img src="{{user.profilePic}}"></img>
		<h2>{{user.firstName}} {{user.lastName}}</h2>
		<p>{{user.gender}}, born {{user.birthday}}</p>
		<p>Location: {{#if user.location}}
						{{user.location}}
					{{else}}
						<span>?</span>
					{{/if}}</p>
		<p>Interested in: {{#if user.sexualPref}}
						{{user.sexualPref}}
					{{else}}
						<span>?</span>
					{{/if}}</p>
					{{#if user.status}}
					<p>Status: 
						{{user.status}}
					{{else}}
						{{#ifUser user currentUser}}
							<p>Status: <span><i>What are you currently watching?</i></span>
						{{/ifUser}}
					{{/if}}</p>
	</div>
	{{#ifUser user currentUser}}
	<div id="sidebar-buttons">
		<a href="/users/{{user._id}}/edit" class="btn btn-default" id="edit-profile-button">Edit My Profile</a>
	</div>
	{{/ifUser}}
</div>

